<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
			<%= f.text_field :name, label: false, placeholder: "name" %>

			 <%= f.email_field :email, label: false, placeholder: "email" %>

			 <%= f.password_field :password, label: false, placeholder: "Password" %>

			 <%= f.password_field :password, label: false, placeholder: "Confirmation" %>

			 <%= f.submit "Create my account", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>