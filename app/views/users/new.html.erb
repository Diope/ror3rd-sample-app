<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		
			<%= f.text_field :name, label: false, placeholder: "name", class: "form-control" %>

			 <%= f.email_field :email, label: false, placeholder: "email", class: "form-control" %>

			 <%= f.password_field :password, label: false, placeholder: "Password", class: "form-control" %>

			 <%= f.password_field :password, label: false, placeholder: "Confirmation", class: "form-control" %>

			 <%= f.submit "Create my account", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>